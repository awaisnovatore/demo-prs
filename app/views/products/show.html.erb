<p id="notice"><%= notice %></p>

<div class="container">
<%= link_to 'Back', products_path, class:'btn btn-default btn-lg' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8">
    <div class="col-sm-4">
      <h2><%= @product.name %></h2>
    </div>
      <h2><%= @product.price %></h2>
      <h4><%= @product.category %></h4>
       <h4><%= @product.user.email %></h4>       
      <p><%= @product.description%></p>
      <%= link_to 'Edit', edit_product_path(@product), class:'btn btn-default btn-lg' %>
    </div>
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-signal logo"></span>
    </div>
  </div>
</div>

<div class="container-fluid bg-grey">
  <div class="row">
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-globe logo"></span>
    </div>

<h1>Reviews</h1>

  
  <!-- Left-aligned media object -->
  <% @product.reviews.each do |review| %>
  <div class="media">
    <div class="media-right">
      <img src="/media/awais/Data/pics/WP_20151114_16_23_45_Pro" class="media-object" style="width:60px">
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= review.title %></h4>
      <p><%= review.content %></p></p>
    </div>
  </div>
  <% end %>

  <h1>Add Review</h1>

  <%= form_for([@product, @product.reviews.build]) do |f| %>
  

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title,class:'form-control input-lg' %>
   
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content ,class:'form-control input-lg'%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  



</div>